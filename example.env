# OpenAI API Key
OPENAI_API_KEY=sk-your-openai-api-key-here

# FastAPI/Uvicorn Settings
DEBUG=False
# HOST и PORT берутся из CMD в Dockerfile (0.0.0.0 и 8000)

# Semantic Analysis
ENABLE_SEMANTIC_ANALYSIS=True

# Настройки для EmbeddingService (можно оставить по умолчанию или переопределить)
# MODEL_NAME=intfloat/multilingual-e5-large
# EMBEDDING_CACHE_SIZE=1000

# Настройки для логов и экспорта (берутся из config.py по умолчанию, но можно переопределить)
# LOG_DIR=logs
# EXPORT_DIR=exports

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Frontend Configuration
VITE_API_URL=http://localhost:8000

# Optional: Logging Level
LOG_LEVEL=INFO

# CORS Settings (домены через запятую)
CORS_ORIGINS=http://localhost:5173 